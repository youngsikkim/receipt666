<div class = "well">
	<p>
	  <b>Name</b><br>
	  <%= @receipt.name %>
	</p>

	<p>
	  <b>Date</b><br>
	  <%= @receipt.date %>
	</p>

	<p>
	  <b>Amount</b><br>
	  <%= @receipt.amount %>
	</p>

	<p>
	  <b>Classification</b><br>
	  <%= @receipt.classification %>
	</p>

	<p>
	  <b>latitude</b><br>
	  <%= @receipt.latitude %>
	</p>

	<p>
	  <b>longitude</b><br>
	  <%= @receipt.longitude %>
	</p>
</div>


<div class="form-actions">
  <%= link_to 'Back', receipts_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_receipt_path(@receipt), :class => 'btn' %>
  <%= link_to 'Delete', receipt_path(@receipt), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
